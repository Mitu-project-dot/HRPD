@model  IEnumerable<Chevron.HRPD.BusinessEntities.Employee_PD_Info>


    @{


        Layout = "~/Views/Shared/_Layout.cshtml";
    }


    <div style="height: 500px;">

        <div style="width:100%; text-align: center; font-weight:bold; margin-bottom:15px; text-decoration: underline;">
            <h3>Employee Dashboard</h3>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Employee Number</th>
                    <th>Name</th>
                    <th>CAI</th>
                    <th>Department</th>
                    <th>Designation</th>
                    <th>Supervisor Name</th>
                    <th>PD Year</th>
                    <th>Show Letter</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Employee_Number</td>
                        <td>@item.Employee_Name</td>
                        <td>@item.CAI</td>
                        <td>@item.Department</td>
                        <td>@item.Designation</td>
                        <td>@item.Supervisor_Name</td>
                        <td>@item.PD_Year</td>
                        <td>
                            @Html.ActionLink("SA Letter", "Create", new { id = item.PD_Year })
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
