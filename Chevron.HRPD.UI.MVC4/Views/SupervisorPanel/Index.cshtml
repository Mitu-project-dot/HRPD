@model  IEnumerable<Chevron.HRPD.BusinessEntities.Employee_PD_Info>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
                  
                       <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        
    <script type="text/javascript">

        $(document).ready(function ()
            

        {


            var year = $("#PD_Year").val();

            if (year == '2018' || year == '2019') {

                $('#btnreview').hide();
                $('#btnmail').hide();
                
                $('#threview').hide();

            }
            else {
                $('#btnreview').show();
                $('#btnmail').show();



            }



          

            
        });
                               </script>

      @using (Html.BeginForm())
{


    <fieldset style="width:945px">
        <br />


        <div style="width:100%; text-align: center; font-weight:bold; margin-bottom:15px; text-decoration: underline;">
            <h3>Supervisor Dashboard</h3>
            <a href="~/docs/SA_USER WALKTHROUGH_SUPERVISOR.docx" class="icon-word"
               target="_blank">Supervisor Walkthrough</a>
        </div>


        <table style="width:945px; margin-left:15%; border-style:hidden; background-color:#f5f2f2">


            <tr>



                <td style="border-style:hidden; width:100px">

                    @Html.DropDownList("PD_Year", new List<SelectListItem>
{


new SelectListItem{ Text="PD Year", Value = "PD Year" },
new SelectListItem{ Text="2020", Value = "2020" },

new SelectListItem{ Text="2018", Value = "2018" },
new SelectListItem{ Text="2019", Value = "2019" },




}, new
{

style = "width: 200px",
id = "PD_Year",


})



                </td>


                <td style="border-style:hidden;width:100px">
                    <button type="submit" id="dsa" name="command" value="search" class="btn btn-primary">Search</button>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;

                </td>


            </tr>
            
        </table>

      


        @if (TempData["Not_found"] != null)
        {


            <script type="text/javascript">

                                   var Not_found = "@TempData["Not_found"]";
                                   swal(Not_found);

            </script>

        }


    </fieldset>
      }
