{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)*@


                           <table class="table table-bordered">


                               <tr>
                                   <th>Employee Number</th>
                                   <th>Name</th>
                                   <th>CAI</th>
                                   <th>Department</th>
                                   <th>Designation</th>
                                   <th>Supervisor Name</th>
                                   <th>PD Year</th>
                                   <th >Show Letter</th>
                                   <th id="threview">
                                       Review & Send Mail
                                   </th>
                                  




                               </tr>

                               <tbody>
                                   @foreach (var item in Model)
                                   {
                                       <tr>
                                           @*<th scope="row">@item.Employee_Number</th>*@
                                           <td>@item.Employee_Number</td>
                                           <td>@item.Employee_Name</td>
                                           <td>@item.CAI</td>
                                           <td>@item.Department</td>
                                           <td>@item.Designation</td>
                                           <td>@item.Supervisor_Name</td>
                                           <td>@item.PD_Year</td>
                                           <td>
                                               @Html.ActionLink("SA Letter", "Create", new { id = item.CAI, PD_Year = item.PD_Year, name = "SA Letter" })
                                           </td>
                                           <td>
                                               @{

                                       if (item.PD_Year == "2020")
                                       {
                                        @Html.ActionLink("Review & Send Mail", "SupervisorMailToIndividual", new { id = item.CAI, PD_Year = item.PD_Year })

                                       }
                                       else
                                       {
                                        
                                                <h6>Reviewed</h6>
                                       }
}
                                                    </td>
                                       </tr>
                                   }
                               </tbody>
                           </table>

                           @*<fieldset style="width:1000px">*@

                           <div class="row">

                               <div class="col-sm-4" style="margin-top:-10px ;height: 50px">
                               </div>

                               <div class="col-sm-4" style="width:700px; align-content: center;">

                                   <button type="submit" id="btnAllRpt" class="btn btn-primary" style="width:100px" onclick="location.href='@Url.Action("AllReportForDirectSupervisor", "SupervisorPanel")' ">All Report</button>
                                   <button type="button" id="btnreview" class="btn btn-warning" style="width:130px" onclick="location.href='@Url.Action("SupervisorReviewUpdate", "SupervisorPanel")' ">Supervisor Review</button>
                                   <button type="button" id="btnmail" class="btn btn-success" style="width:130px" onclick="location.href='@Url.Action("SupervisorMailToEmployee", "SupervisorPanel")' ">Send Mail To All</button>

                                   @*<button type="submit" name="command" value="Create" style="width:100px" class="btn btn-primary">Report</button>*@
                                   @*<button type="submit" id="btnAllRpt" class="btn btn-primary" style="width:100px">All Report</button>*@
                                  
                               </div>
                               </div>

